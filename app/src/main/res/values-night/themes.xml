<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MBLoad" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">#dc1e76</item>
        <item name="colorSecondary">#dc1e76</item>
        <item name="android:statusBarColor">#BC2565</item>
        <item name="android:windowBackground">@color/color1</item>
    </style>


    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/kalpurush</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TabLayoutStyle2" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Define custom popup menu style -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>




</resources>