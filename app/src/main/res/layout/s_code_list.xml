<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/anim6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/bg"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        >



        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:src="@drawable/scode"
            android:layout_gravity="center_vertical"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/title_scode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minute cheak"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/kalpurush"
                android:textColor="@color/color1"

                />
            <TextView
                android:id="@+id/code_scode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*1421*6*3#"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/kalpurush"
                android:textColor="#F5262727"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            

            <ImageView
                android:id="@+id/copy_scode"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/copy_24"
                android:layout_gravity="center"
                android:tint="@color/color"
                android:padding="@dimen/_2sdp"
                android:background="@color/color1"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />

        </RelativeLayout>




    </LinearLayout>

</LinearLayout>