<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_145sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:backgroundTint="@color/white"
        android:layout_margin="@dimen/_8sdp"
        app:cardElevation="@dimen/_3sdp"
        android:id="@+id/anim2"
        >

        <LinearLayout
            android:id="@+id/note_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    >

                    <TextView
                        android:id="@+id/note_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Title"
                        android:textColor="#F00E0E0E"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:maxLines="1"

                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/main_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="জিAs a college student, much of your time will be spent interacting with texts of all types, shapes, sizes, and delivery methods. Sound interesting? Oh, it is. In the following sections, we’ll explore the nature of texts, what they will mean to you, and how to explore and use them effectively."
                    android:textColor="#F22C2B2B"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:justificationMode="inter_word"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/note_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10.20pm/12-1-23"
                    android:textColor="#F22C2B2B"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/_10sdp"

                    />




            </LinearLayout>






        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>