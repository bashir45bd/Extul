<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Codeshower">

    <RelativeLayout
        android:id="@+id/robi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:visibility="gone"

        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_robi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/airtel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:visibility="gone"
        android:gravity="center_vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_ar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:visibility="gone"
        android:gravity="center_vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_gp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:visibility="gone"
        android:gravity="center_vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_bl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secret_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/s_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/color1"
            >

            <ImageView
                android:id="@+id/s_shower"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/bar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/kalpurush"
                android:text=""
                android:layout_marginLeft="@dimen/_30sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_scode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_below="@+id/s_bar"
            />




    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tali"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
        android:id="@+id/tali_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/color1"
        >

        <ImageView
            android:id="@+id/tali_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/back" />



        <TextView
            android:id="@+id/tali_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/kalpurush"
            android:text="USSD কোড"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_marginLeft="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/dots"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:onClick="showPopupMen"
                    android:padding="@dimen/_9sdp"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/dots" />
            </RelativeLayout>



          </LinearLayout>

            <LinearLayout
                android:id="@+id/ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/rec_add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:clickable="true"
                    android:backgroundTint="@color/color1"
                    android:foreground="?attr/selectableItemBackground"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    >
                    <LinearLayout
                        android:id="@+id/color1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="দিলাম/বেচা"
                            android:textSize="@dimen/_18ssp"
                            android:paddingLeft="@dimen/_19sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/kalpurush"
                            android:gravity="center"
                            android:layout_gravity="center"

                            />



                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pay_add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:visibility="visible"
                    android:backgroundTint="@color/color"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    >
                    <LinearLayout
                        android:id="@+id/color2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="পেলাম/নিলাম"
                            android:textSize="@dimen/_18ssp"
                            android:fontFamily="@font/kalpurush"
                            android:paddingLeft="@dimen/_19sdp"
                            android:paddingRight="@dimen/_19sdp"
                            android:textStyle="bold"
                            android:textColor="@color/color1"
                            android:gravity="center"
                            android:layout_gravity="center"

                            />



                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/rec_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/bg"
                android:visibility="visible"
                >

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView"
                    android:hint="টাকার পরিমান"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:endIconMode="clear_text"
                    app:boxStrokeWidth="@dimen/_2sdp"
                    app:boxBackgroundColor="@color/white"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rec_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="#151515"
                        android:textSize="@dimen/_13ssp" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView"
                    android:hint="বিবরণ"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:endIconMode="clear_text"
                    app:boxStrokeWidth="@dimen/_2sdp"
                    app:boxBackgroundColor="@color/white"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rec_dec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#151515"
                        android:maxLength="25"
                        android:inputType="text"
                        android:textSize="@dimen/_13ssp"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/rec_submit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:backgroundTint="@color/color1"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kalpurush"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:text="নিশ্চিত"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19ssp"
                                android:textStyle="bold"

                                />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
            android:id="@+id/pay_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg"
            android:visibility="gone"
            >

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView"
                android:hint="টাকার পরিমান"
                android:layout_margin="@dimen/_10sdp"
                app:endIconMode="clear_text"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxBackgroundColor="@color/white"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pay_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#151515"
                    android:textSize="@dimen/_13ssp" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ThemeOverlay.Material3.AutoCompleteTextView"
                android:hint="বিবরণ"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                app:endIconMode="clear_text"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxBackgroundColor="@color/white"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pay_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#151515"
                    android:maxLength="25"
                    android:inputType="text"
                    android:textSize="@dimen/_13ssp"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/pay_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:backgroundTint="@color/color1"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="নিশ্চিত"
                            android:fontFamily="@font/kalpurush"
                            android:textSize="@dimen/_19ssp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"

                            />



                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </LinearLayout>

            <LinearLayout
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gridian"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/tv_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/white"
                android:fontFamily="@font/kalpurush"
                android:textSize="@dimen/_19ssp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="start"
                android:layout_marginLeft="@dimen/_8sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="পরিশোধ এর জন্য বার্তা পাঠান।"
                android:textColor="@color/white"
                android:fontFamily="@font/kalpurush"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_gravity="start"
                >
                <ImageView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call_24"
                    android:background="@drawable/listbg"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <ImageView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message_24"
                    android:background="@drawable/listbg"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <ImageView
                    android:id="@+id/whatapps_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsapp22"
                    android:background="@drawable/listbg"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>

            </LinearLayout>


        </LinearLayout>








    </LinearLayout>

</RelativeLayout>